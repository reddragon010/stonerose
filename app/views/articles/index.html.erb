<h1>Listing articles</h1>

<table width="100%">
  <tr>
	<th></th>
    <th>Title</th>
    <th>Start</th>
    <th>Stop</th>
  </tr>

<% for article in @articles %>
  <tr style="background-color:<%=h article.is_intime? ? "#CFC" : "#FCC" %>">
	<td><%= link_to image_tag(article.active_img), :action => "toggleActivity", :id => article.id if article.is_intime? %></td>
    <td><%=h article.title %></td>
    <td><%=h article.start %></td>
    <td><%=h article.stop %></td>
	<td> <%= link_to image_tag("ArrowUp.png"), {:action => "decWeight", :id => article.id} unless article.id == @articles.first.id %></td>
	<td><%= link_to image_tag("ArrowDown.png"), {:action => "incWeight", :id => article.id} unless article.id == @articles.last.id %></td>
    <td><%= link_to image_tag("ShowA.png"), article %></td>
	<td><%= link_to image_tag("PreviewA.png"), {:controller => "slides",:action => "show", :id => article.id}, :popup => true %></td>
    <td><%= link_to image_tag("EditA.png"), edit_article_path(article) %></td>
    <td><%= link_to image_tag("RemoveA.png"), article, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New article', new_article_path %>
