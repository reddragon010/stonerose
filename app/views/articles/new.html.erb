<h1>New article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>
  <p>
	<%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </p>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <%= fckeditor_textarea("article", "content", :toolbarSet => 'Stonerose', :width => '100%', :height => '500px') %>

  <p>
    <%= f.label :start %><br />
    <%= f.datetime_select :start %>
  </p>
  <p>
    <%= f.label :stop %><br />
    <%= f.datetime_select :stop %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>
